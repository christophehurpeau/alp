{
  "name": "alp",
  "private": true,
  "version": "0.0.0",
  "description": "personal exploration and framework for node and browser",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com>",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/alp.git",
  "homepage": "https://github.com/christophehurpeau/alp",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run --ignore \"*-example\" build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "generate:docs":
      "lerna run --parallel --ignore \"*-example\" generate:docs",
    "lint": "lerna run --stream lint",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion":
      "yarn run lint && yarn run build && yarn run generate:docs && pob-repository-check-clean",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "test": "lerna run --stream test",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": ["prettier --write", "git add"],
    "lib/**/*.json": ["prettier --write", "git add"],
    "lib/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "husky": "^0.14.3",
    "lerna": "3.0.0-beta.18",
    "lint-staged": "^7.0.5",
    "pob-release": "^4.1.1",
    "prettier": "^1.12.1",
    "yarnhook": "^0.2.0"
  }
}
