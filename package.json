{
  "name": "alp",
  "private": true,
  "description": "personal exploration and framework for node and browser",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/alp.git",
  "homepage": "https://github.com/christophehurpeau/alp",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=22.18.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b",
    "checks": "node scripts/check-packages.js",
    "clean:build": "yarn workspaces foreach --parallel -A run clean:build",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "start:hello-node": "yarn --cwd packages/alp-hello-node-example start",
    "start:hello-react": "yarn --cwd packages/alp-hello-react-example start",
    "test": "TZ=UTC node  --test packages/*/src/**/*.test.ts",
    "test:coverage": "TZ=UTC npx c8 --all --src ./src node  --test packages/*/src/**/*.test.ts",
    "test:coverage:json": "TZ=UTC npx c8 --reporter=json --all --src ./src node  --test packages/*/src/**/*.test.ts",
    "test:coverage:lcov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=lcov",
    "test:watch": "TZ=UTC node  --test packages/*/src/**/*.test.ts",
    "tsc": "tsc -b",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "@pob/commitlint-config": "9.2.0",
    "@pob/eslint-config": "61.1.0",
    "@pob/eslint-config-typescript-react": "61.1.0",
    "@pob/rollup-esbuild": "6.7.0",
    "@pob/root": "18.3.0",
    "check-package-dependencies": "10.4.1",
    "eslint": "9.34.0",
    "typescript": "5.8.3"
  }
}
