{
  "name": "alp",
  "private": true,
  "version": "0.0.0",
  "description": "personal exploration and framework for node and browser",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/alp.git",
  "homepage": "https://github.com/christophehurpeau/alp",
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "clean:build": "(rm -Rf packages/*/dist) || true",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "NODE_OPTIONS=--max_old_space_size=4096 eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "postinstall": "pob-root-postinstall",
    "start:hello-react": "yarn --cwd packages/alp-hello-react-example start",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "watch": "yarn workspaces foreach --parallel --jobs unlimited --interlaced --exclude \"*-example\" -Av run watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/*/(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)?(x)",
      "<rootDir>/packages/*/(src|lib)/**/*.test.(ts|js|cjs|mjs)?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@babel/core": "7.17.0",
    "@linaria/babel-preset": "3.0.0-beta.15",
    "@pob/commitlint-config": "4.1.0",
    "@pob/eslint-config": "48.1.1",
    "@pob/eslint-config-typescript": "48.1.1",
    "@pob/eslint-config-typescript-react": "48.1.1",
    "@pob/lerna-light": "5.1.0",
    "@pob/root": "6.6.1",
    "@types/jest": "27.4.0",
    "check-package-dependencies": "3.1.0",
    "eslint": "8.8.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.5.0",
    "pob-babel": "31.0.0",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  }
}
