{
  "name": "alp",
  "private": true,
  "version": "0.0.0",
  "description": "personal exploration and framework for node and browser",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/alp.git",
  "homepage": "https://github.com/christophehurpeau/alp",
  "engines": {
    "node": ">=12.10.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream build && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint --report-unused-disable-directives --quiet --resolve-plugins-relative-to . --ext js,ts,tsx .",
    "lint:prettier": "prettier --check .",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "cross-env GH_TOKEN=$POB_GITHUB_TOKEN lerna version --conventional-commits --conventional-graduate --create-release=github -m 'chore: release' && lerna publish from-git",
    "start:hello-react": "yarn --cwd packages/alp-hello-react-example start",
    "test": "lerna run --stream test",
    "tsc": "tsc -b",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/commitlint-config": "2.0.1",
    "@pob/eslint-config": "42.0.1",
    "@pob/eslint-config-node": "42.0.0",
    "@pob/eslint-config-typescript": "42.0.1",
    "@pob/eslint-config-typescript-node": "42.0.0",
    "@pob/eslint-config-typescript-react": "42.0.1",
    "@pob/lerna-light": "3.23.0",
    "@pob/root": "3.0.3",
    "eslint": "7.17.0",
    "husky": "4.3.7",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  }
}
