{
  "extends": [
    "@pob/root/tsconfigs/strict.json",
    "@pob/root/tsconfigs/targets/rollup-babel.json"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/definitions",
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,

    "paths": {
      "alp-node-config": ["../../packages/alp-node-config/src"],
      "alp-node-config/*": ["../../packages/alp-node-config/src/*"]
    }
  },
  "references": [{ "path": "../../packages/alp-node-config/tsconfig.json" }]
}
