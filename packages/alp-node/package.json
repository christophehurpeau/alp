{
  "name": "alp-node",
  "version": "0.36.0",
  "description": "framework based on koa 2",
  "keywords": [
    "springbokjs",
    "alp",
    "framework",
    "koa",
    "node5"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:alpjs/alp-node.git",
  "homepage": "https://github.com/alpjs/alp-node#readme",
  "bugs": {
    "url": "https://github.com/alpjs/alp-node/issues"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "main": "lib/index.js",
  "module:node": "./dist/index-node8.es.js",
  "module:node-dev": "./dist/index-node8-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "clean": "rm -Rf docs dist",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "flow": "flow",
    "lint": "eslint src/",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "lint-staged": {
    "{README.md,package.json,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "alp-config": "^3.5.0",
    "alp-errors-node": "^2.5.0",
    "alp-language": "^1.8.0",
    "alp-listen": "^1.4.0",
    "alp-params": "^0.4.0",
    "alp-translate": "^2.6.0",
    "findup-sync": "^2.0.0",
    "flow-runtime": "^0.17.0",
    "koa": "^2.5.0",
    "koa-compress": "^2.0.0",
    "koa-static": "^4.0.2",
    "nightingale-logger": "^3.4.0",
    "node-fetch": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-latest-node": "^1.0.0",
    "eslint": "4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-pob": "^17.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "pob-babel": "^19.1.5",
    "pob-release": "^3.1.0",
    "prettier": "^1.11.1",
    "yarnhook": "^0.1.1"
  }
}
