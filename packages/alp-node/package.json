{
  "name": "alp-node",
  "version": "6.1.0",
  "description": "framework based on koa 2",
  "keywords": [
    "springbokjs",
    "alp",
    "framework",
    "koa",
    "node5"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/alp.git",
    "directory": "packages/alp-node"
  },
  "homepage": "https://github.com/christophehurpeau/alp",
  "bugs": {
    "url": "https://github.com/alpjs/alp-node/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "main": "./dist/index-node18.mjs",
  "types": "./dist/definitions/index.d.ts",
  "typesVersions": {
    ">=3.1": {
      "AlpNodeApp": [
        "./dist/AlpNodeApp.d.ts"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/definitions/index.d.ts",
      "node": {
        "import": "./dist/index-node18.mjs"
      }
    },
    "./AlpNodeApp": {
      "types": "./dist/definitions/AlpNodeApp.d.ts",
      "node": {
        "import": "./dist/AlpNodeApp-node18.mjs"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "clean": "yarn clean:build",
    "clean:build": "pob-babel-clean-out dist",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet packages/alp-node",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "prettier": "@pob/root/prettier-config",
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "18"
      }
    ],
    "entries": [
      "index",
      "AlpNodeApp"
    ]
  },
  "peerDependencies": {
    "router-segments": "^9.1.0"
  },
  "dependencies": {
    "@types/koa": "^2.13.1",
    "@types/node": ">=18.0.0",
    "alp-listen": "7.1.0",
    "alp-node-config": "9.1.0",
    "alp-node-errors": "8.1.0",
    "alp-node-language": "7.1.0",
    "alp-params": "6.1.0",
    "alp-translate": "8.1.0",
    "alp-types": "3.1.1",
    "koa": "^2.13.1",
    "koa-compress": "^5.0.0",
    "koa-static": "^5.0.0",
    "nightingale-logger": "^15.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@types/koa-compress": "4.0.6",
    "@types/koa-static": "4.0.4",
    "@types/minimist": "1.2.5",
    "pob-babel": "38.0.0",
    "typescript": "5.3.3"
  }
}
