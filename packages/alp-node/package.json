{
  "name": "alp-node",
  "version": "5.1.1",
  "description": "framework based on koa 2",
  "keywords": [
    "springbokjs",
    "alp",
    "framework",
    "koa",
    "node5"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/alp.git",
    "directory": "packages/alp-node"
  },
  "homepage": "https://github.com/christophehurpeau/alp",
  "bugs": {
    "url": "https://github.com/alpjs/alp-node/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./dist/index-node16.mjs",
  "types": "./dist/definitions/index.d.ts",
  "typesVersions": {
    ">=3.1": {
      "AlpNodeApp": [
        "./dist/AlpNodeApp.d.ts"
      ],
      "fetch": [
        "./dist/fetch.d.ts"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "node": {
        "import": "./dist/index-node16.mjs"
      }
    },
    "./AlpNodeApp": {
      "node": {
        "import": "./dist/AlpNodeApp-node16.mjs"
      }
    },
    "./fetch": {
      "node": {
        "import": "./dist/fetch-node16.mjs"
      }
    }
  },
  "module:aliases-node": {
    "./AlpNodeApp.js": "./dist/AlpNodeApp-node16.es.js",
    "./fetch.js": "./dist/fetch-node16.es.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "clean": "yarn clean:build",
    "clean:build": "pob-babel-clean-out dist",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet packages/alp-node",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "prettier": "@pob/root/prettier-config",
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "16"
      }
    ],
    "entries": [
      "index",
      "AlpNodeApp",
      "fetch"
    ]
  },
  "peerDependencies": {
    "router-segments": "^6.0.0"
  },
  "dependencies": {
    "@types/koa": "^2.13.1",
    "@types/node": ">=16.0.0",
    "@types/node-fetch": "^3.0.3",
    "alp-listen": "6.1.1",
    "alp-node-config": "8.2.0",
    "alp-node-errors": "7.1.1",
    "alp-node-language": "6.1.1",
    "alp-params": "5.1.1",
    "alp-translate": "7.2.0",
    "alp-types": "3.1.0",
    "koa": "^2.13.1",
    "koa-compress": "^5.0.0",
    "koa-static": "^5.0.0",
    "nightingale-logger": "^13.0.0",
    "node-fetch": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@types/koa-compress": "4.0.3",
    "@types/koa-static": "4.0.2",
    "@types/minimist": "1.2.2",
    "pob-babel": "35.4.0",
    "typescript": "4.9.5"
  }
}
