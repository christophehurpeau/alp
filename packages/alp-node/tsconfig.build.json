    { "path": "../alp-node-language/tsconfig.build.json" },
    { "path": "../alp-listen/tsconfig.build.json" },
    { "path": "../alp-params/tsconfig.build.json" },
    { "path": "../alp-translate/tsconfig.build.json" }
  ]
