{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "@pob/eslint-config-typescript",
    "@pob/eslint-config-typescript-react"
  ],
  "overrides": [
    {
      "files": ["src/index.browser.ts", "src/web/**/*"],
      "env": {
        "browser": true
      }
    }
  ]
}
