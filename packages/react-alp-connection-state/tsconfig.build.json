{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/tsbuildinfo"
  },

  "exclude": [
    "dist/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**"
  ],
  "references": [
    { "path": "../react-alp-context/tsconfig.build.json" },
    { "path": "../react-alp-translate/tsconfig.build.json" }
  ]
}
